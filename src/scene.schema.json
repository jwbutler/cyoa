{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "scene",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string"
          },
          "adds": {
            "type": "object",
            "properties": {
              "items": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "remove": {
            "type": "object",
            "properties": {
              "items": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "goto": {
            "room": "string"
          }
        },
        "required": [ "text" ]
      }
    },
    "condition": {
      "type": "object",
      "properties": {
        "requires": {
          "type": "object",
          "properties": {
            "items": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "forbids": {
          "type": "object",
          "properties": {
            "items": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "required": [ "id", "name", "description" ]
}
